{
    "manifest_version": 3,
    "name": "Personal Internet Archive",
    "version": "1.0",
    "description": "Save webpages to your personal archive.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://archive-backend-gi0k.onrender.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Save to Archive"
    },
    "content_scripts": [
        {
            "matches": [
                "https://myarchive-nine.vercel.app/*"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_start"
        }
    ]
}